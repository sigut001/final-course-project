<article class="dummyCard">
  <img
    id="dummyImage"
    class="dummyImage"
    src="<%= product.url %>"
    alt="<%= product.title %>"
  />
  <div class="dummyIconContainer">
    <% switch (product.status) {case "fastAusverkauft": %>
    <p id="dummyStatus" class="fastAusverkauft">fast ausverkauft</p>
    <%break; case "ausverkauft": %>
    <p id="dummyStatus" class="ausverkauft">ausverkauft</p>
    <%break; case "undeifined": %>
    <p id="dummyStatus" class="verfügbar">verfügbar</p>
    <% break; default: // Dies deckt "verfügbar" und jeden anderen Fall ab %>
    <p id="dummyStatus" class="verfügbar">verfügbar</p>
    <% } if (product.sale === "true") { %>
    <p id="dummyDiscount" class="discount">-<%= product.discount %>%</p>
    <% } %>
  </div>
  <div class="dummyBody">
    <div class="w-full">
      <h2 id="dummyTitle" class="dummyTitle"><%= product.title %></h2>
    </div>

    <div class="w-full">
      <h4 class="dummyPriceContainer">
        <span>Preis: </span><span id="dummyPrice"><%= product.price %></span
        ><span>€</span>
      </h4>
    </div>

    <div class="mt-3 flex flex-row gap-2 justify-end w-full">
      <button class="btn btn_color_alt c-primary-black">zum Produkt</button>
      <button class="btn btn_color">
        <svg
          class="h-full"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M21 5L19 12H7.37671M20 16H8L6 3H3M16 5.5H13.5M13.5 5.5H11M13.5 5.5V8M13.5 5.5V3M9 20C9 20.5523 8.55228 21 8 21C7.44772 21 7 20.5523 7 20C7 19.4477 7.44772 19 8 19C8.55228 19 9 19.4477 9 20ZM20 20C20 20.5523 19.5523 21 19 21C18.4477 21 18 20.5523 18 20C18 19.4477 18.4477 19 19 19C19.5523 19 20 19.4477 20 20Z"
            stroke="#000000"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      </button>
    </div>
  </div>
</article>
