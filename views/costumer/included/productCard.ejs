<li>
    <article class="productCard">
        <img class="productCardImage" src="<%= product.url %>" alt="<%= product.title %>">
         <% if (product.status === "verfügbar") { %>
        <div class="productCardStatus">
            <p class="verfügbar">auf Lager</p>
        </div>
    <% } else if (product.status === "fast-ausverkauft") { %>
        <div class="productCardStatus">
            <p class="fast-ausverkauft">fast ausverkauft</p>
        </div>
    <% } else if (product.status === "ausverkauft") { %>
        <div class="productCardStatus">
            <p class="ausverkauft">ausverkauft</p>
        </div>
    <% } %>
        <div class="productCardBody">
            <div class="w-full">
                <h2 class="productCardTitle"><%= product.title %></h2>
            </div>
            <div class="w-full h-14">
                <h4 class="productCardSummary"><%= product.summary %></h4>
            </div>
            <div class="w-full">
                <h4 class="productCardPrice">Preis: <%= product.price %> €</h4>
            </div>
            <div class="mt-3 flex flex-row gap-2 justify-end w-full">
                <button class="btn btn_color"><a href="/product?<%= product._id%>">View</a></button>
                <button class="btn btn_color_alt"><a href="/add-to-cart?<%= product._id%>">Add to Cart</a></button>
            </div>
        </div>
        
    </article>
</li>